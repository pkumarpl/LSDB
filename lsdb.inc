c
c                      Parameters for LSDB
c
cccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccc
c
c maximum number of atoms, including those to be generated by 
c symmetry in order to obtain 'complete' molecules/fragments
c
      parameter( nat = 20000 )
c
cccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccc
c
c maximum number of covalently-bonded neighbors
c beware: increasing this parameter with significantly increase memory
c
      parameter( nbond = 20 )
c
cccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccc
c
c maximum number neighbors for each atom including those NOT 
c covalently-bonded
c
      parameter( maxnei = 1000 )
c
cccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccc
c
c maximum number of rings 
c
      parameter( maxrings = 1000 )
c
cccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccc
c
c maximum number of atoms in each of the rings
c
      parameter( maxmem = 100 )
c
cccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccc
c
c maximum number of dummy atoms 
c
      parameter( ndumax = 2000 )
c
cccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccc
c
      parameter( maxr = 1000000 )
c      
